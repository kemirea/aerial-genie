<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.PrimaryText" parent="AppTheme">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.SecondaryText" parent="AppTheme">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="AppTheme.DisabledText" parent="AppTheme">
        <item name="android:textColor">@color/disabled_text</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/primary</item>
        <item name="android:weightSum">100</item>
    </style>

    <style name="SplashTheme.TitleText" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">5dp</item>
        <item name="android:textScaleX">1.3</item>
        <item name="android:textSize">40sp</item>
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">15.0</item>
    </style>

    <style name="SplashTheme.SubText" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="NavigationDrawerStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:background">@color/window_background</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:listSelector">@color/accent</item>
    </style>

    <style name="NavigationDrawerStyle.Item">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/navigation_list_entry</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="NavigationDrawerStyle.Selector">
        <item name="android:background">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_light</item>
    </style>

    <style name="Trick" />

    <style name="Trick.RowStyle">
        <item name="android:state_selected">@color/listview_selected</item>
    </style>

    <style name="Trick.RowTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_weight">@integer/trick_row_text_weight</item>
    </style>

    <style name="Trick.PageTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/text_trick_title</item>
    </style>

    <style name="ScaleableImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="ScaleableImage.TrickRowImage" parent="ScaleableImage">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_margin">@dimen/trick_row_padding</item>
        <item name="android:layout_weight">@integer/trick_row_image_weight</item>
        <item name="android:background">@color/primary</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="ExampleImageStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">80</item>
    </style>



</resources>
